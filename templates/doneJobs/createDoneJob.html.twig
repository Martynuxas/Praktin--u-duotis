{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    <div class="row">
        <h3 class="mt-5 mb-5">Create Form</h3>
        <div class="col-md-6 offset-md-3">
            {{ form_start(form)}}
                <div class="form-group">
                    {{ form_label(form.Road) }}
                    {{ form_widget(form.Road,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.Cipher) }}
                    {{ form_widget(form.Cipher,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.SectionStart) }}
                    {{ form_widget(form.SectionStart,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.SectionEnd) }}
                    {{ form_widget(form.SectionEnd,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.Quantity) }}
                    {{ form_widget(form.Quantity,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    <button class="btn btn-info mt-2 text-white">Submit</button>
                </div>
            {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}